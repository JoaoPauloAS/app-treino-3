{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "buildCommand": "next build",
  "framework": "nextjs",
  "ignoreCommand": "echo 'Ignoring build step'",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  }
} 